{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug ESBMC",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/debug/src/esbmc/esbmc",
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/debug/src/esbmc",
            "console": "integratedTerminal",
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "externalConsole": false,
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}
